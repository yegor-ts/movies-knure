<%- include('../partials/head') %>
<body>
  <%- include('../partials/navbar') %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-4">
        <img src="https://image.tmdb.org/t/p/w500/<%=details.poster_path%>" alt="<%= details.title %>" class="img-fluid">
      </div>
      <div class="col-md-8">
        <h1><%= details.title %></h1>
        <p><strong>Release Date:</strong> <%= details.release_date %></p>
        <p><strong>Rating:</strong> <%= details.vote_average %> &#11088</p>
        <p><strong>Synopsis:</strong> <%= details.overview %></p>
        <p><strong>Genres:</strong> <% details.genres.forEach(function(genre) { %> <%=genre.name%>, <% }); %></p>
      </div>
    </div>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"
  ></script>
</body>
</html>