<%- include('../partials/head') %>
<body>
  <%- include('../partials/navbar') %>
  <div class="container mt-5">
    <h1 class="text-center mb-5">TMDB Top Rated Movies</h1>
    <ol class="list-group list-group-numbered">
      <% topRated.forEach(function(movie, index) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-primary badge-pill"><%= index + 1 %></span>
          <div class="d-flex align-items-center">
            <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" alt="<%= movie.title %> poster" class="mr-3">
            <div class="p-5">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.overview %></p>
              <a href="/movie/<%= movie.id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
          <span class="badge badge-success"><%= movie.vote_average %></span>
        </li>
      <% }); %>
    </ol>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"
  ></script>
</body>
</html>